<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>blogfy</title>
    <%- include('./partials/style') %>    
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container">
        <form class="mt-5 col-5 mx-auto" action="/blog/create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="title ">CoverImage</label>
              <input type="file" class="form-control" id="file" aria-describedby="emailHelp" name="CoverImage">
            </div>
            <div class="mb-3">
              <label for="title" class="title">Title</label>
              <input type="text" class="form-control" id="title" aria-describedby="emailHelp" name="Title">
            </div>
            <div class="mb-3 ">
              <label for="exampleInputPassword1" class="form-label">Content</label>
              <textarea name="Content" class="form-control" id="Content"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
    <%- include('./partials/script') %>
</body>
</html>